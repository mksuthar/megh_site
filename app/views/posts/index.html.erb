<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Content</th>
    <th>Cite</th>
    <th>Tags</th>
    <th>Author</th>
    <th>Createdat</th>
    <th>Updatedat</th>
    <th>Lastcommentat</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.category %></td>
    <td><%= post.content %></td>
    <td><%= post.cite %></td>
    <td><%= post.tags %></td>
    <td><%= post.author %></td>
    <td><%= post.createdat %></td>
    <td><%= post.updatedat %></td>
    <td><%= post.lastcommentat %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

